{
    "manifest_version": 3,
    "name": "Say Hi for man",
    "description" : "Script for sending 'hi' messages for men",
    "version" : "0.0.1",
    "author": "Drew Skow",
    "content_scripts": [
        {
            "matches" : ["http://www.charmdate.com/*"],
            "js"  : ["content_script.js"],
            "run_at": "document_end"
        }
    ],
    "action" : {
        "default_title" : "SendBot",
        "default_icon" : "icon.png",
        "default_popup": "popup.html"
    },

    "background" :{
        "service_worker" : "background.js"
    },

    "permissions" : [
        "activeTab",
        "tabs",
        "storage"
    ]
}

